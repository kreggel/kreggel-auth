<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
        logicalFilePath="epssChangeLog">

    <!--
   		This is the main changelog. add updates here or to sub-changelogs and include them here.
        For information about the supported datatypes, see: http://stackoverflow.com/questions/16890723/list-all-liquibase-sql-types
   	-->

    <!-- initial dump for new installations -->
    <include file="changelog_base.xml" relativeToChangelogFile="true" />

    <changeSet author="OliverKlette85" context="new" id="20151229220700">
        <createTable tableName="user">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="OliverKlette85" context="new" id="20151229222000">
        <addPrimaryKey columnNames="id" constraintName="user_pkey" tableName="user"/>
    </changeSet>

    <changeSet author="OliverKlette85" context="new" id="20151229222200">
        <addUniqueConstraint columnNames="username, id, email" constraintName="user_unique" deferrable="false"
                             disabled="false" initiallyDeferred="false" tableName="user"/>
    </changeSet>
</databaseChangeLog>